<div class="w-5/6 grid gap-3">
  <h1 class="text-center text-2xl font-bold text-red-400">Recipe title</h1>
  <div class="grid gap-3">
    <div class="flex justify-between">
      <p>Prepartion time: </p>
      <div class="flex items-center justify-center">
        <label for="toggleB" class="flex items-center cursor-pointer">
          <!-- label -->
          <div class="mr-5 text-gray-700 font-medium">
            Toggle Me!
          </div>
          <!-- toggle -->
          <div class="relative">
            <!-- input -->
            <input type="checkbox" checked id="toggleB" class="sr-only">
            <!-- line -->
            <div class="block bg-gray-600 w-14 h-8 rounded-full"></div>
            <!-- dot -->
            <div class="dot absolute left-1 top-1 bg-white w-6 h-6 rounded-full transition"></div>
          </div>
        </label>
      </div>
    </div>
    <p>Cooking time:</p>
    <p>Steps go here</p>
    <div class="flex justify-between mt-11 mb-8 border-b-4 border-red-300 pb-5">
      <%= link_to "Generate Shopping list", user_path, :class => "p-1 bg-red-300 rounded-md hover:bg-red-500 hover:text-white"%>
      <%= link_to "Add ingredients", user_path, :class => "p-1 bg-red-300 rounded-md hover:bg-red-500 hover:text-white"%>
    </div>
    <div class="flex justify-center">
      <table class="min-w-full bg-white">
        <thead class="bg-gray-800 text-white">
          <tr>
            <th class="border border-slate-600">Food</th>
            <th class="border border-slate-600">Quantity</th>
            <th class="border border-slate-600">Value</th>
            <th class="border border-slate-600">Action</th>
          </tr>
        </thead>
        <tbody class="text-gray-700">
          <tr class="odd:bg-red-300">
            <td class="border border-slate-600 text-center">Food name</td>
            <td class="border border-slate-600 text-center">2 pieces </td>
            <td class="border border-slate-600 text-center">12</td>
            <td class="border border-slate-600 text-center">
              <%= link_to "Delete", :class => "hover:text-red-600",
            data: {
                    turbo_method: :delete,
                    turbo_confirm: "Do you want to delete ?"
                  }%>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
